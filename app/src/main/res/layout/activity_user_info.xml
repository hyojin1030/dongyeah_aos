<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUserInfo">

    <TextView
        android:text="사용자정보입력"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="보호자 닉네임"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_user_name"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="반려동물 종"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_breed"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="반려동물 이름"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_name"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="반려동물 나이"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_age"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="반려동물 몸무게"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_weight"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="반려동물 성별"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_gender"
                style="@style/user_info_edit"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="중성화 여부"
                style="@style/user_info_label"/>
            <EditText
                android:id="@+id/edit_pet_neuter"
                style="@style/user_info_edit"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="저장"
        android:onClick="onClickSave"
        android:layout_width="110dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>